CXX		  := clang++

#Compiler flags
#if mode variable is empty, setting debug build mode
ifeq ($(mode),release)
   CXX_FLAGS = -Wall -Wextra -pedantic -O3 -std=c++20
else
   mode = debug
   CXX_FLAGS = -Wall -Wextra -pedantic -std=c++20 -g -ggdb
endif

BIN := build
SRC := src
EXE := genpass


all: $(BIN)/$(EXE)

$(BIN)/$(EXE): $(SRC)/*.cpp 
	$(CXX) $(CXX_FLAGS) $^ -lboost_program_options -o $@

strip:
	-strip $(BIN)/$(EXE)

clean:
	-rm $(BIN)/*

