{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/genpass",
            "preLaunchTask": "Build C++ project",
            "args": ["W4w3d2s5"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Задать для варианта приложения дизассемблирования значение Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug LLDB",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/genpass",
            "args": ["W3w12d35s4"],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "preLaunchTask": "Build C++ project",
        }
    ]
}
